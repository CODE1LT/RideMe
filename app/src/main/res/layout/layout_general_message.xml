<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/l_general_message_cl_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    tools:background="@color/color_error">

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/l_general_message_tv_message"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/l_general_message_tv_message_margin"
        android:layout_marginLeft="@dimen/l_general_message_tv_message_margin"
        android:layout_marginTop="@dimen/l_general_message_tv_message_margin"
        android:layout_marginEnd="@dimen/l_general_message_tv_message_margin"
        android:layout_marginRight="@dimen/l_general_message_tv_message_margin"
        android:layout_marginBottom="@dimen/l_general_message_tv_message_margin"
        android:textColor="@android:color/white"
        android:fontFamily="@font/barlow_regular"
        android:textSize="@dimen/l_general_message_tv_message_text_size"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/l_general_message_iv_close"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Something went wrong!" />

    <ImageView
        android:id="@+id/l_general_message_iv_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/l_general_message_iv_close_margin"
        android:layout_marginEnd="@dimen/l_general_message_iv_close_margin"
        android:layout_marginBottom="@dimen/l_general_message_iv_close_margin"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_close"
        tools:ignore="ContentDescription" />

</androidx.constraintlayout.widget.ConstraintLayout>